<%= content_for :title do %>
	<%= @movie.title %>
<% end %>

<%= content_for :options do %>
	<%= link_to 'Edit', edit_movie_path(@movie) %>
	<%= link_to 'Delete', @movie, method: :delete, data: { confirm: 'Are you sure?' } %>
	<%= link_to 'Back', movies_path %>
<% end %>

<% if notice %>
	<p id="notice" class="ui-widget ui-state-highlight ui-corner-all" style="margin-top: 20px; padding: 0 .7em;">
		<span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;">&nbsp;</span>
		<%= notice %>
	</p>
<% end %>

<article class="<%= @movie.dvd == 1 ? "dvd" : "video"%>">
	<h2><%= @movie.title %> <%= @movie.yearstring %></h2>
	<% if @movie.lastWatched %>
		<p>Last Watched: <span class="lastwatched"><%= @movie.lastWatched %></span></p>
	<% end %>
	<p>Duration: <span class="lastwatched"><%= @movie.duration %><% if @movie.duration %> minutes<% end %></span></p>
	<ul>
	<% @movie.actors.each do |actor| %>
		<li><%= link_to actor.name, actor %></li>
	<% end %>
	</ul>
	<div>
	<% @movie.genres.each do |genre| %>
		<%= link_to genre.name, genre, :class => "genre" %>
	<% end %>
	</div>
</article>
