<%= content_for :title do %>
	Genres
<% end %>

<%= content_for :options do %>
	<%= link_to 'New Genre', new_genre_path %>
<% end %>

<% @genres.each do |genre| %>
	<article class="genre">
		<a href="<%= url_for genre %>"><h2><%= genre.name %></h2></a>
		<%= link_to 'Edit', edit_genre_path(genre), :class => "btn-edit ui-icon ui-icon-pencil" %>
		<%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-delete ui-icon ui-icon-closethick" %>
	</article>
<% end %>