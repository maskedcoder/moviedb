<!DOCTYPE html>
<html>
<head>
  <title><%= controller_name.capitalize %> | Myers Movie Database</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body data-controller="<%= controller_name %>" data-action="<%= action_name %>">

<hgroup>
	<a href="<%= root_path %>"><h1>Myers Movie Database</h1></a>
	<nav role="navigation">
		<%= link_to "Movies", movies_path %>
		<%= link_to "Actors", actors_path %>
		<%= link_to "Genres", genres_path %>
	</nav>
</hgroup>

<section id="content">
	<h1><%= yield :title %></h1>
	<div class="optionsarea">
		<%= yield :options %>
	</div>
	<div class="mainarea">
		<form action="" method="GET" role="search" onsubmit="return q.value != ''">
			<input id="searchbar" type="text" name="q" placeholder="Search..." <% if defined? @search %>value="<%= @search %>"<% end %> />
			<button id="searchbtn" type="submit" class="ui-button-icon-only"><span style="display: inline-block" class="ui-icon ui-icon-search"></span></button>
		</form>
	<%= yield %>
	</div>
</section>

</body>
</html>
